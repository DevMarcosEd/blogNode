<%- include('../../partials/header'); %>
    <%- include('../../partials/navbarLogged'); %>
        <%- include('../../partials/_msg'); %>

            <div class="container">
                <hr>
                <h2>Artigos</h2>
                <hr>
                <a href="/articles/newArticles" class="btn btn-dark mb-3">Criar novo Artigo</a>
                <table class="table table-dark table-bordered">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Título</th>
                            <th>Slug</th>
                            <th>Category</th>
                            <th>Ações</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% articles.forEach(article=> { %>
                            <tr>
                                <td>
                                    <%= article.id %>
                                </td>
                                <td>
                                    <%= article.title %>
                                </td>
                                <td>
                                    <%= article.slug %>
                                </td>
                                <td>
                                    <%= article.category.slug %>
                                </td>
                                <td>

                                    <a href="/articles/edit/<%= article.id %>" class="btn btn-warning mt-1">Editar</a>

                                    <form method="post" action="/articles/delet" style="display: inline;"
                                        onsubmit="confirmDelet(event, this)">
                                        <input type="hidden" name="id" value="<%= article.id %>">
                                        <button class="btn btn-danger mt-1">Deletar</button>
                                    </form>

                                </td>
                            </tr>
                            <% }) %>
                    </tbody>
                </table>
            </div>
            <%- include('../../partials/footer'); %>