<%- include('../../partials/header'); %>
    <%- include('../../partials/admnavbar'); %>

        <div class="container">
            <hr>
            <div class="card">
                <div class="card-header">
                    <h2>Novo Artigos</h2>
                </div>
                <div class="card-body">
                    <form method="POST" action="/articles/update">
                        <input type="text" name="title" class="form-control mb-2"
                            placeholder="Defina o tÃ­tulo do artigo" value="<%= article.title %>">
                        <textarea name="body" class="form-control mt-2" placeholder="Escreva o Artigo aqui!"
                            id="article"><%= article.body %></textarea>
                        <label class="mt-2 mb-2">Categorias</label>
                        <select name="category" class="form-control">
                            <% categories.forEach((category)=> { %>

                                <% if(category.id===article.categoryId) { %>
                                    <option value="<%= category.id %>" selected>
                                        <%= category.title %>
                                    </option>
                                    <% } else { %>
                                        <option value="<%= category.id %>">
                                            <%= category.title %>
                                        </option>
                                        <% } %>

                                            <% }) %>
                        </select>
                        <input type="hidden" name="id" value="<%= article.id %>">
                        <button class="btn btn-success mt-2">Atualizar</button>
                    </form>
                </div>
            </div>
        </div>

        <%- include('../../partials/footer'); %>

            <script src="/tinymce/tinymce.min.js"></script>
            <!-- configurando tinymce -->
            <script>
                tinymce.init({ //falando para o tinymce adicionar poderes da textarea com id article
                    language: 'pt_BR',
                    selector: '#article',
                    // Plugins mce
                    plugins: 'advlist autolink link image lists print preview hr searchreplace wordcount fullscreen insertdatetime media save table paste emoticons'

                })
            </script>