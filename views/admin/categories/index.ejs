<%- include('../../partials/header'); %>
    <%- include('../../partials/navbarLogged'); %>
        <%- include('../../partials/_msg'); %>
            <div class="container">
                <hr>
                <h2>Categorias</h2>
                <hr>
                <a href="/categories/newCategories" class="btn btn-dark mb-3">Criar nova categoria</a>
                <table class="table table-dark table-bordered">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Título</th>
                            <th>Slug</th>
                            <th>Ações</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% categories.forEach(category=> { %>
                            <tr>
                                <th>
                                    <%=category.id%>
                                </th>
                                <th>
                                    <%=category.title%>
                                </th>
                                <th>
                                    <%=category.slug%>
                                </th>
                                <th>
                                    <a href="/categories/edit/<%=category.id%>" class="btn btn-warning mt-1">Editar</a>

                                    <form method="post" action="/categories/delet" style="display: inline;"
                                        onsubmit="confirmDelet(event, this)">
                                        <input type="hidden" name="id" value="<%=category.id%>">
                                        <button class="btn btn-danger mt-1">Deletar</button>
                                    </form>
                                </th>
                            </tr>
                            <% }) %>
                    </tbody>
                </table>
            </div>
            <%- include('../../partials/footer'); %>